{
  "name": "sharkoder",
  "version": "1.0.0",
  "description": "GPU-accelerated video encoding manager for remote media libraries",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "video",
    "encoding",
    "ffmpeg",
    "gpu",
    "hevc",
    "nvenc"
  ],
  "author": "MonsieurZ",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "crypto": "^1.0.1",
    "css-loader": "^6.8.1",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.1",
    "html-webpack-plugin": "^5.5.3",
    "moment": "^2.29.4",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "progress-stream": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6",
    "ssh2-sftp-client": "^10.0.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.0",
    "webdav": "^5.8.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.monsieurz.sharkoder",
    "productName": "Sharkoder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/ssh2-sftp-client/**/*",
      "node_modules/fluent-ffmpeg/**/*",
      "node_modules/ffprobe-static/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "homepage": "."
}
